<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:scrollbarSize="0dip"
            android:scrollbarThumbVertical="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fpassword_txtUsername"
            style="@style/TextStyle"
            android:text="@string/prompt_username"/>

        <EditText
            android:id="@+id/fpassword_edtUsername"
            style="@style/EditStyle"
            android:enabled="false"
            android:hint="@string/prompt_username"
            android:inputType="text"/>

        <TextView
            android:id="@+id/fpassword_txtPassword"
            style="@style/TextStyle"
            android:text="@string/fchange_current_pass"/>

        <EditText
            android:id="@+id/fpassword_edtPassword"
            style="@style/EditStyle"
            android:hint="@string/fchange_current_pass"
            android:inputType="textPassword"/>

        <TextView
            android:id="@+id/fpassword_txtNewPassword"
            style="@style/TextStyle"
            android:text="@string/fchange_new_pass"/>

        <EditText
            android:id="@+id/fpassword_edtNewPassword"
            style="@style/EditStyle"
            android:hint="@string/fchange_new_pass"
            android:inputType="textPassword"/>

        <TextView
            android:id="@+id/fpassword_txtConfirmPassword"
            style="@style/TextStyle"
            android:text="@string/fchange_confirm_new_pass"/>

        <EditText
            android:id="@+id/fpassword_edtConfirmPassword"
            style="@style/EditStyle"
            android:hint="@string/fchange_confirm_new_pass"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/fpassword_txtSubmit"
            style="@style/FormStyle"
            android:layout_margin="@dimen/spacing_standard"
            android:text="@string/submit"/>
    </LinearLayout>

</ScrollView>