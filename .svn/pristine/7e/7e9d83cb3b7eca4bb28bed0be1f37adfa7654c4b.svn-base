  public ReportViewHolder onCreateViewHolder(ViewGroup parent, int viewType) {        View itemView = LayoutInflater.from(parent.getContext())                .inflate(R.layout.item_aadhaar_history, parent, false);        return new ReportViewHolder(itemView);    }    @Override    public void onBindViewHolder(final ReportViewHolder holder, int position) {        AadhaarVerificationBean data = mReportList.get(position);        holder.mAadhaarID.setText(data.getAadhaarnumber());        holder.mAadhaarName.setText(data.getName());        try {            holder.mAadhaarDate.setText(mSDFRequired.format(mSDFOld.parse(data.getVerificationDate())));        } catch (ParseException aE) {            aE.printStackTrace();        }        if (Constants.AUTHORIZE.equalsIgnoreCase(data.getStatus())) {            holder.mAadhaarStatus.setTextColor(context.getResources().getColor(R.color.green));        } else if (Constants.UNAUTHORIZE.equalsIgnoreCase(data.getStatus())) {            holder.mAadhaarStatus.setTextColor(context.getResources().getColor(R.color.red));        } else {            holder.mAadhaarStatus.setTextColor(Color.BLACK);        }        holder.mAadhaarStatus.setText(Html.fromHtml(String.format(context.getString(mystatus), data.getStatus())));    }    @Override    public int getItemCount() {        return mReportList.size();    }    public class ReportViewHolder extends RecyclerView.ViewHolder {        @BindView(R.id.aadhaat_history_txtAadharID)        TextView mAadhaarID;        @BindView(R.id.aadhaat_history_txtAadharName)        TextView mAadhaarName;        @BindView(R.id.aadhaat_history_txtDate)        TextView mAadhaarDate;        @BindView(R.id.aadhaat_history_txtTransStatus)        TextView mAadhaarStatus;        public ReportViewHolder(View view) {            super(view);            ButterKnife.bind(this, view);        }    }}