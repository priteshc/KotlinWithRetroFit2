<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Raise Complaint"
        android:textSize="@dimen/font_xlarge"
        android:textColor="@color/textColorPrimary1"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/raise"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_below="@+id/raise"
        >


    <EditText
        android:id="@+id/mobile_no"
        style="@style/EditStyle"
        android:hint="Enter Mobile Number"
        android:inputType="numberPassword"
        android:maxLength="10"
        />

    <com.jaredrummler.materialspinner.MaterialSpinner
        app:ms_dropdown_max_height="250dp"
        app:ms_dropdown_height="250dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:ms_text_color="@color/textColorPrimary1"
        app:ms_arrow_tint="@color/colorPrimaryDark"
        android:textColorHint="@color/textColorPrimary"
        app:ms_background_color="#f7f8fa"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="3dp"
        android:id="@+id/complain"
        android:typeface="serif"
        android:layout_marginTop="15dp"
        android:hint="Select Your Complain"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:maxLines="3"
        android:maxLength="500"
        android:layout_marginTop="15dp"
        android:inputType="textMultiLine"
        android:textColor="@color/textColorPrimary1"
        android:background="@drawable/edittextbackground"
        android:hint="Enter Description"
        android:padding="5dp"
        android:gravity="left|top"
        android:id="@+id/cmsg"
        android:textColorHint="@color/textColorPrimary1"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Ok"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textColor="@color/mdtp_white"
        android:textSize="18dp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="10dp"
        android:id="@+id/ok"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        />

    </LinearLayout>


</RelativeLayout>