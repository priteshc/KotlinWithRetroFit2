<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_standard">

    <TextView
        android:id="@+id/aadhaat_history_txtAadharName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="@dimen/spacing_control"
        android:layout_marginTop="@dimen/spacing_control"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="7dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/font_normal"
        tools:text="TextView"/>

    <TextView
        android:id="@+id/aadhaat_history_txtAadharID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/aadhaat_history_txtAadharName"
        android:layout_marginBottom="@dimen/spacing_control_half"
        android:layout_marginLeft="@dimen/spacing_standard"
        android:layout_marginRight="@dimen/spacing_control"
        android:layout_marginTop="@dimen/spacing_control_half"
        android:drawableLeft="@drawable/ic_aadhar_id"
        android:drawablePadding="@dimen/spacing_control"
        android:ellipsize="end"
        android:gravity="center"
        android:textColor="@color/textColorSecondary"
        android:textSize="@dimen/font_normal"
        tools:text="TextView"/>
    <TextView
        android:id="@+id/aadhaat_history_txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/aadhaat_history_txtAadharID"
        android:layout_marginLeft="@dimen/spacing_standard"
        android:layout_marginRight="@dimen/spacing_control"
        android:layout_marginTop="@dimen/spacing_control"
        android:textColor="@color/textColorSecondary"
        android:textSize="@dimen/font_normal"
        tools:text="@string/aadhaar_verification"/>

    <TextView
        android:id="@+id/aadhaat_history_txtTransStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/aadhaat_history_txtDate"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/aadhaat_history_txtDate"
        android:layout_toRightOf="@+id/aadhaat_history_txtDate"
        android:gravity="right"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/font_normal"
        tools:text="@string/mystatus"/>

</RelativeLayout>