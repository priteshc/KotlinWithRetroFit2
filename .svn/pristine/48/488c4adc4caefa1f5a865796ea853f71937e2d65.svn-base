<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/svContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:scrollbarSize="0dip"
            android:scrollbarThumbVertical="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ftrans_txtTransCode"
            style="@style/TextStyle"
            android:text="@string/fchange_trans_code"/>

        <EditText
            android:id="@+id/ftrans_edtTransCode"
            style="@style/EditStyle"
            android:hint="@string/fchange_trans_code"
            android:inputType="numberPassword"
            android:maxLength="4"/>

        <TextView
            android:id="@+id/ftrans_txtNewTransCode"
            style="@style/TextStyle"
            android:text="@string/hint_new_trans_code"/>

        <EditText
            android:id="@+id/ftrans_edtNewTransCode"
            style="@style/EditStyle"
            android:hint="@string/fchange_new_trans_code"
            android:inputType="numberPassword"
            android:maxLength="4"/>

        <TextView
            android:id="@+id/ftrans_txtConfirmTransCode"
            style="@style/TextStyle"
            android:text="@string/hint_confirm_trans_code"/>

        <EditText
            android:id="@+id/ftrans_edtConfirmTransCode"
            style="@style/EditStyle"
            android:hint="@string/fchange_confirm_trans_code"
            android:inputType="numberPassword"
            android:maxLength="4"/>

        <Button
            android:id="@+id/ftrans_txtSubmit"
            style="@style/FormStyle"
            android:text="@string/submit"/>
    </LinearLayout>

</ScrollView>