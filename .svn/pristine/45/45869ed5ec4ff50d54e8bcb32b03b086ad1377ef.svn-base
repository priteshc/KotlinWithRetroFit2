 MasterIFSCHolder holder, int position) {        MasterIFSCBean data = mMasterIFSCList.get(position);        holder.mMasterBankName.setText(Html.fromHtml(String.format(context.getString(bank), data.getBankName())));        holder.mMasterIFSCCode.setText(Html.fromHtml(String.format(context.getString(ifsc), data.getBankIFSC())));        holder.mMasterBranchName.setText(Html.fromHtml(String.format(context.getString(branch), data.getBankBranch())));    }    @Override    public int getItemCount() {        return mMasterIFSCList.size();    }    public class MasterIFSCHolder extends RecyclerView.ViewHolder {        @BindView(R.id.item_txtBankName)        TextView mMasterBankName;        @BindView(R.id.item_txtIFSCCode)        TextView mMasterIFSCCode;        @BindView(R.id.item_txtAddress)        TextView mMasterBranchName;        public MasterIFSCHolder(View view) {            super(view);            ButterKnife.bind(this, view);        }    }}